@model IEnumerable<PrimerParcial.Models.Recipe>
@{
    ViewData["Title"] = "Recipes";
}
<h1>Recipes</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Servings</th>
            <th>Prep (min)</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Title</td>
            <td>@item.Category?.Name</td>
            <td>@item.Servings</td>
            <td>@item.PreparationTimeMinutes</td>
            <td>@item.DateCreated.ToString("yyyy-MM-dd")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
